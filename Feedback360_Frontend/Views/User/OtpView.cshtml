@model Feedback360_Frontend.Models.OtpVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>360 Feedback</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/lib/Assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/lib/Assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/lib/Assets/vendors/css/vendor.bundle.base.css">
    <!-- Bootstrap CSS for password eye-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />

    <!-- font awesome  -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/lib/Assets/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/lib/Assets/images/ProjectIcon.PNG" />
    <script type="text/javascript">
        setTimeout(function() {
            document.getElementById('ResendOtpBtn').disabled = null;
        }, 30000);

        var countdownNum = 30;
        incTimer();

        function incTimer() {
            setTimeout(function() {
                if (countdownNum != 0) {
                    countdownNum--;
                    document.getElementById('timeLeft').innerHTML = 'Time left: ' + countdownNum + ' seconds';
                    incTimer();
                } else {
                    document.getElementById('timeLeft').innerHTML = '';
                }
            }, 1000);
        }
    </script>
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <h3 style="color : darkblue"><b>360 Feedback</b></h3>
                            </div>
                            <h4>Enter the OTP(One Time Password) sent to your registered Email Address.</h4>
                            <form asp-action="OtpView" class="pt-3">
                                <div class="form-group d-flex">
                                    <input asp-for="OtpCode" type="password" class="form-control form-control-lg" id="OtpCode" placeholder="Enter OTP" pattern="[0-9]{,6}" maxlength="6" title="Please Enter Valid OTP." required />
                                    <div class="input-group-append">
                                        <span class="input-group-text" onclick="password_show_hide();">
                                            <i class="fas fa-eye" id="show_eye"></i>
                                            <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="invalid-feedback" style="display:block;">
                                    <span asp-validation-for="OtpCode"></span>
                                    @if (TempData["WrongOtp"] != null)
                                    {
                                        <center> <p style="align-content:center; color:red; align-self:center">@TempData["WrongOtp"]</p></center>
                                    }
                                </div>
                                <div class="mt-3">
                                    <input type="submit" value="SUBMIT" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                                </div>
                                <div class="my-2 d-flex">
                                    <button type="button" disabled="disabled" id="ResendOtpBtn" class="text-right ml-auto mr-0 mt-3 btn btn-link" asp-action="ReSendOtp">Resend OTP</button><br />
                                </div>
                                <div>
                                    <a asp-action="UserLogin">Back to Login</a>
                                <span id="timeLeft" class="text-right ml-5 mt-2">Time Left: 30 seconds</span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/lib/Assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/lib/Assets/js/off-canvas.js"></script>
    <script src="~/lib/Assets/js/hoverable-collapse.js"></script>
    <script src="~/lib/Assets/js/template.js"></script>
    <script src="~/lib/Assets/js/settings.js"></script>
    <script src="~/lib/Assets/js/todolist.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.js" integrity="sha512-F49kv+wpQXPPk83WZgrqcw/A72douvETfmyZJ1tRELBVhDEm1aXH1FOUDjP0KJzgJKZY+w3RGeOiIBQq3tddqA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- endinject -->
</body>
<script>
    $(document).ready(() => {
        $("#ResendOtpBtn").click(function() {
            var val = $("#ddlServiceID").val();
            $.post("/User/ReSendOtp", {}, function(data, textStatus) {
                console.log("Opt Sent");
                $("#ResendOtpBtn").prop("disabled", true);
                setTimeout(function() {
                    document.getElementById('ResendOtpBtn').disabled = null;
                }, 30000);
                var countdownNum = 30;
                incTimer();
                function incTimer() {
                    setTimeout(function() {
                        if (countdownNum != 0) {
                            countdownNum--;
                            document.getElementById('timeLeft').innerHTML = 'Time left: ' + countdownNum + ' seconds';
                            incTimer();
                        } else {
                            document.getElementById('timeLeft').innerHTML = '';
                        }
                    }, 1000);
                }
            });
        });
    })
    function password_show_hide() {
        var x = document.getElementById("OtpCode");
        var show_eye = document.getElementById("show_eye");
        var hide_eye = document.getElementById("hide_eye");
        hide_eye.classList.remove("d-none");
        if (x.type === "password") {
            x.type = "text";
            show_eye.style.display = "none";
            hide_eye.style.display = "block";
        } else {
            x.type = "password";
            show_eye.style.display = "block";
            hide_eye.style.display = "none";
        }
    }
</script>
</html>
