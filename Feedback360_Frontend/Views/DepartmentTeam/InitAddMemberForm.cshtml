@model Feedback360_Frontend.Models.DepartmentTeamVm
@{
    ViewData["Title"] = "InitAddMemberForm";
}
@{
    Layout = null;
}
<head>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/DepartmentTeam.js"></script>
    <style>
        label {
            color: darkblue;
        }
    </style>
</head>

<div class="model-body">
    <div class="outerBox" style="padding:12px;">
        <form asp-action="AddMemberToGroup" data-ajax="true" data-ajax-method="POST"
              data-ajax-failure="globalFunctions.onFailure"
              data-ajax-success="onSaveSuccess" class="pt-3">
            <div class="form-outline mb-4" hidden="hidden">
                <label class="control-label">TeamLeadId</label>
                <input asp-for="TeamLeadId" class="form-control" />
                <span asp-validation-for="TeamLeadId" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4" hidden="hidden">
                <label class="control-label">UserId</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4" hidden="hidden">
                <label class="control-label">DeptId</label>
                <input asp-for="DeptId" class="form-control" value="0" />
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label class="control-label">User Name</label>
                <input readonly class="form-control" value="@ViewBag.UserName" name="UserName" />
                <span class="text-danger"></span>
            </div>
            <div class="form-outline mb-4" hidden="hidden">
                <label class="control-label">BankId</label>
                <input asp-for="BankId" class="form-control" />
                <span asp-validation-for="BankId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SRoleId" class="control-label">Secondary Role<span style="color:red">*</span></label>
                 <select asp-for="SRoleId" class="form-control" >
                     <option value="">--Select Role--</option>
                @foreach (var item in ViewBag.secondaryRoleListVms)
                {
                    <option value="@item.SRoleID">@item.SRoleName</option>
                }
            </select>
                <span asp-validation-for="SRoleId" class="text-danger"></span>
            </div>
            <br />

            <div class="modal-footer">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-info" role="button" data-bs-dismiss="modal">Cancel</a>
            </div>
        </form>
    </div>
</div>
