@model Feedback360_Frontend.Models.GetUsersByBankIdVM

@{
    Layout = null;
}
<div class="model-body">
    <div class="outerBox" style="padding:12px;">
        <form asp-action="SetUserAuthority" class="pt-3" data-ajax="true" data-ajax-method="POST"
          data-ajax-failure="globalFunctions.onFailure"
          data-ajax-success="onSaveSuccess">

            <div class="form-outline mb-4" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportingAuthority" class="control-label">Select Reporting Authority</label>
                <select asp-for="ReportingAuthority" class="form-control" asp-items="ViewBag.ReportingAuthorityList">
                    <option value="">--Select--Reporting--Authority--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ReviewingAuthority" class="control-label">Select Reviewing Authority</label>
                <select asp-for="ReviewingAuthority" class="form-control" asp-items="ViewBag.ReviewingAuthorityList">
                    <option value="">--Select--Reviewing--Authority--</option>
                </select>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-info" role="button" data-bs-dismiss="modal">Cancel</a>
            </div>
        </form>
    </div>
</div>



